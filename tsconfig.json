{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015", "es2017", "es2019"],
    "outDir": "./lib",
    "strict": true,
    "pretty": true,
    "incremental": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "compileOnSave": false
}
