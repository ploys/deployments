{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015", "es2017", "es2019"],
    "outDir": "./lib",
    "declaration": true,
    "strict": true,
    "pretty": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["packages/*/src/**/*.ts"],
  "exclude": ["packages/*/src/**/*.spec.ts", "packages/*/src/**/*.test.ts"],
  "compileOnSave": false
}
